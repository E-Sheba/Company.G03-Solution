@model Department
@{
    ViewData["Title"] = "Delete";
}

<div class="row">
    <div class="col-3"></div>

    <form asp-action="Delete" class="col-6" method="post">
        <h1>Delete Department</h1>

        <div asp-validation-summary="All" class="alert alert-danger"></div>

        <div class="form-group">
            <label asp-for="Code" class="col-form-label"></label>
            <input readonly asp-for="Code" />

        </div>
        <div class="form-group">
            <label asp-for="Name" class="col-form-label"></label>
            <input readonly asp-for="Name" class="form-control" />

        </div>
        <div class="form-group">
            <label asp-for="DateOfCreation" class="col-form-label"></label>
            <input readonly asp-for="DateOfCreation" class="form-control" />

        </div>
        <br />

        <input type="submit" class="btn btn-danger" value="Delete" />
        <a asp-action="Index" class="btn btn-light">Back To List </a>
    </form>
    <div class="col-3"></div>

</div>