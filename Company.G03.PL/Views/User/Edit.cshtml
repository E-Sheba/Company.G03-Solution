@model UserViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="row">
    <div class="col-3"></div>
    <form asp-action="Edit" enctype="multipart/form-data" class="col-5">

        <h1>Edit User</h1>
        <div asp-validation-summary="All" style="@(ViewData.ModelState.IsValid ? "display:none;" : "display:block;")" class="  alert alert-danger">Exception-Status:@ViewBag.EmptyAlert </div>

        <partial name="UserPartialViews/EditCreateUserPartialView" model="Model" />
        <br />
        @* <input  hidden asp-for="ImageName" /> *@
        <input type="submit" value="Update" asp-route-id="@Model.Id" class="btn btn-warning" />
        <a asp-action="Index" class="btn btn-light"> Back to List </a>


    </form>
    <div class="col-3"></div>
</div>
@section Validation {

    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

