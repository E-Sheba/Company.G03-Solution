@model SignInViewModel
@{
    ViewData["Title"] = "SignIn";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">

        <form asp-action="SignIn" method="post">

            <input class="text email" asp-for="Email" placeholder="Email" required="">
            <input class="text Password" asp-for="Password" placeholder="Password" required="">

            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="RememberMe" class="checkbox">
                    <span>Remember me</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNIN">
        </form>
        <p>Don't have an Account? <a asp-action="SignUp"> Sign Up Now!</a></p>
        <p>
            <a asp-action="ForgetPassword">  Forgot Password ?</a>
        </p>
    </div>
    <div asp-validation-summary="All" style="@(ViewData.ModelState.IsValid ? "display:none;" : "display:block;"); margin-bottom:5px;" class=" alert alert-danger">
        Exception-Status:@ViewBag.EmptyAlert
    </div>
</div>


