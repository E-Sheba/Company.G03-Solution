@model ResetPasswordViewModel
@{
    ViewData["Title"] = "ResetPassword";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">

    <div asp-validation-summary="All" style="@(ViewData.ModelState.IsValid ? "display:none;" : "display:block;"); margin-bottom:5px;" class=" alert alert-danger">
        Exception-Status:@ViewBag.EmptyAlert
    </div>
    <div class="agileits-top">

        <form asp-action="ResetPassword">

            <input class="text" style="margin-bottom:5px;" asp-for="Password" placeholder="Password" required="">
            <input class="text" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">


            <input type="submit" value="Reset Password">
        </form>
        <p>Don't have an Account? <a asp-action="SignUp"> Sign Up Now!</a></p>

    </div>
</div>
