@model SignUpViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
<div asp-validation-summary="All" style="@(ViewData.ModelState.IsValid ? "display:none;" : "display:block;")" class="m-5 alert alert-danger">Exception-Status:@ViewBag.EmptyAlert </div>

        <form asp-action="SignUp" >

            <input class="text UserName" asp-for="UserName" placeholder="Username" required="">
            <input class="text FirsName" asp-for="FirstName" placeholder="First Name" required="">
            <input class="text LastName" asp-for="LastName" placeholder="Last Name" required="">
            <input class="text email" asp-for="Email" placeholder="Email" required="">
            <input class="text Password" asp-for="Password" placeholder="Password" required="">
            <input class="text ConfirmPassword" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">

            <div class="wthree-text">
                <label class="anim">
                    <input asp-for="IsAgree" class="checkbox" required="">
                    <span>I Agree To The Terms & Conditions</span>
                </label>
                <div class="clear"> </div>
            </div>
            <input type="submit" value="SIGNUP">
        </form>
        <p>Don't have an Account? <a asp-action="SignUn"> Register Now!</a></p>
    </div>
</div>

