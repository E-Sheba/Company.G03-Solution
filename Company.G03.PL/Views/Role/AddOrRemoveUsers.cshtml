@model List<UsersInRoleViewModel>
@{
    ViewData["Title"] = "AddOrRemoveUsers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var RoleId = ViewData["roleId"] as string;
}

<h1>Add Or Remove Users</h1>


<div class="row">

    <div class="col-3"></div>

    <form asp-action="AddOrRemoveUsers" asp-route-roleId="@RoleId">

        @for (int i = 0; i < Model.Count; i++)
        {
            <div class="form-control col-6">
                <input asp-for="@Model[i].IsSelected " />
                <label asp-for="@Model[i].IsSelected"> @Model[i].UserName </label>
            </div>
            <input type="hidden"  asp-for="@Model[i].UserId " />
            <input type="hidden" asp-for="@Model[i].UserName " />

        }

        <input type="submit" class="btn btn-success" value="Update" />
        <a asp-action="Edit" asp-route-id="@RoleId" class="btn btn-light">Cancel</a>

    </form>

    <div class="col-3"></div>


</div>